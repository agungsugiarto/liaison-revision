{
    "name": "liaison/revision",
    "type": "library",
    "description": "Seamless software updates library for CodeIgniter4 projects.",
    "keywords": [
        "software",
        "updates",
        "revision",
        "codeigniter4"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "John Paul E. Balandan, CPA",
            "email": "paulbalandan@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.3",
        "ext-intl": "*",
        "ext-mbstring": "*",
        "sebastian/diff": "^4.0",
        "symfony/filesystem": "^5.1",
        "symfony/process": "^5.1"
    },
    "require-dev": {
        "codeigniter4/codeigniter4": "dev-develop",
        "friendsofphp/php-cs-fixer": "^2.16",
        "liaison/cs-config": "^1.0",
        "phpunit/phpunit": "^9.3"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "1.x-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Liaison\\Revision\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Liaison\\Revision\\Tests\\": "tests/src/"
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/codeigniter4/codeigniter4"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "post-update-cmd": [
            "@php -r \"file_exists('phpunit.xml') || copy('phpunit.xml.dist', 'phpunit.xml');\""
        ],
        "changelog-update": "auto-changelog --hide-credit --template keepachangelog --commit-limit false --sort-commits date-desc",
        "changelog-update-unreleased": "@changelog-update --unreleased"
    },
    "scripts-descriptions": {
        "changelog-update": "Updates CHANGELOG.md without unreleased section.",
        "changelog-update-unreleased": "Updates CHANGELOG.md with unreleased section."
    },
    "support": {
        "issues": "https://github.com/paulbalandan/liaison-revision/issues",
        "source": "https://github.com/paulbalandan/liaison-revision"
    }
}
